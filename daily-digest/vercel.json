{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|svg))", "dest": "/public/$1" },
    { "src": "/dashboard", "dest": "/public/dashboard.html" },
    { "src": "/login", "dest": "/public/login.html" },
    { "src": "/", "dest": "/public/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/send-digests",
      "schedule": "0 12 * * *"
    }
  ]
}
